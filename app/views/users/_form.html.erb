<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :age %>
    <%= f.input :status, collection: USER_STATUS %>
    <%= f.input :roles, collection: USER_ROLES %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
