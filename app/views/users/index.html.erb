<p id="notice"><%= notice %></p>

<%= simple_form_for :search, method: :get, html: { class: 'form-inline' } do |f| %>
  <%= f.input :name, required: false, placeholder: 'name', label: false %>
  <%= f.input :email, required: false, placeholder: 'email', label: false %>
  <%= f.input :age, as: :integer, input_html: { min: '1' }, required: false,
    placeholder: 'age', label: false %>
    <%= f.input :status, collection: USER_STATUS, required: false, label: false %>
    <%= f.input :roles, collection: USER_ROLES, required: false, label: false %>
  <%= f.button :submit, 'Search', class: 'btn btn-info' %>
<% end %>

<br>

<%= simple_form_for :redi_search, method: :get, html: { class: 'form-inline' } do |f| %>
  <%= f.input :text, required: true, placeholder: 'search', label: false %>
  <%= f.button :submit, 'RediSearch', class: 'btn btn-info' %>
<% end %>

<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Status</th>
      <th>Roles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.status %></td>
        <td><%= user.roles %></td>
        <td><%= link_to 'Show', user_path(user.id), class: 'btn btn-sm btn-success' %></td>
        <td><%#= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Destroy', user_path(user.id), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

