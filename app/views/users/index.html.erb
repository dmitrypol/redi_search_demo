<p id="notice"><%= notice %></p>

<%= simple_form_for :search, method: :get, html: { class: 'form-inline' } do |f| %>
  <%= f.input :f_name, required: false %>
  <%= f.input :l_name, required: false %>
  <%= f.input :email, required: false %>
  <%= f.input :age, as: :integer, input_html: { min: '1' }, required: false %>
  <%= f.input :status, collection: USER_STATUS, required: false %>
  <%= f.button :submit, 'Search', class: 'btn btn-info' %>
<% end %>

<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.f_name %></td>
        <td><%= user.l_name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.status %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

